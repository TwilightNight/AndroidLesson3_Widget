<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AnalogClock
        android:id="@+id/activity_clock_analog_clock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />

    <DigitalClock
        android:id="@+id/activity_clock_digital_clock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_clock_analog_clock"
        android:layout_alignLeft="@id/activity_clock_analog_clock" />

    <Button
        android:id="@+id/activity_clock_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Click"
        android:layout_below="@+id/activity_clock_digital_clock"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/activity_clock_text_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_clock_button"
        android:layout_alignLeft="@id/activity_clock_analog_clock"
        android:text="PLZ click button"/>
</RelativeLayout>
